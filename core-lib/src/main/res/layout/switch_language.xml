<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/avenir_next_lt_pro_demi"
        android:gravity="center"
        android:maxLines="8"
        android:text="Choose Language"
        android:textColor="@color/note_border"
        android:textSize="@dimen/alert_message_Text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/alert_otpions_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chk_french"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="French/FranÃ§ais"
            android:textStyle="bold"
            android:textColor="@color/needle_grey"/>

        <TextView
            android:id="@+id/chk_english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="English/Anglaise"
            android:textStyle="bold"
            android:textColor="@color/needle_grey"/>
    </LinearLayout>
</LinearLayout>