<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:translationZ">0.1dp</item>
        <item name="elevation">0.dp</item>
        <item name="backgroundColor">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorSecondary">#000</item>
    </style>


    <style name="TransparentActionbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="elevation">0.1dp</item>
        <item name="android:translationZ">0.1dp</item>
        <item name="android:textColorSecondary">@android:color/transparent</item>

    </style>


    <style name="WhiteActionbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="elevation">0.1dp</item>
        <item name="android:translationZ">0.1dp</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="ActionbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="text_header">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/avenir_next_it_pro_bold</item>
    </style>

    <style name="text_desc">
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_regular</item>
    </style>

    <style name="text_subscription">
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="android:textColor">@color/subscription_yellow</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_demi</item>
    </style>

    <style name="text_menu">
        <item name="android:textSize">@dimen/text_menu</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_demi</item>
    </style>

</resources>
