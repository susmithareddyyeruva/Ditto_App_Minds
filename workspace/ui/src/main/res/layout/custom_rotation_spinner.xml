<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textRotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/spinner_dropdown_height"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/avenir_next_lt_pro_regular"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:ellipsize="end"
        android:hint="Rotation"
        android:paddingHorizontal="@dimen/margin_text"
        android:textColor="@color/needle_grey"
        android:textSize="@dimen/text_instruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>