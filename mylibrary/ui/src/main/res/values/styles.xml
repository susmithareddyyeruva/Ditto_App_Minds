<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- styles.xml -->

    <style name="add_project">
        <item name="android:textSize">@dimen/text_add_project</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="text_header">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_desc">
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.NavigtaionDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigtaionDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorControlNormal">@color/cell_color</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/app_red</item> <!-- activated color change as you wish -->
    </style>
</resources>
