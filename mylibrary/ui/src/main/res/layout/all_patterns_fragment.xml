<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ditto.mylibrary.ui.AllPatternsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".02"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".98"
            android:orientation="vertical"/>


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/pattern_library_appBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintTop_toBottomOf="@id/topbar1">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:menu="@null"
                app:theme="@style/ToolBarStyle"
                app:titleTextColor="@color/black">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_startn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent=".07"
                        android:orientation="vertical"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_endn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent=".98"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/header_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/avenir_next_it_pro_bold"
                        android:gravity="center"
                        android:text="Pattern Library (24)"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/size_pattern_lib_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <View
                        android:id="@+id/view_vertical"
                        android:layout_width="2dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="@dimen/margin_start_vertical_view"
                        android:background="@color/search_text_code"
                        app:layout_constraintBottom_toBottomOf="@id/header_view_title"
                        app:layout_constraintLeft_toRightOf="@id/header_view_title"
                        app:layout_constraintTop_toTopOf="@id/header_view_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/margin_start_search"
                        android:drawableStart="@drawable/ic_sync"
                        android:drawablePadding="@dimen/dimen_5"
                        android:fontFamily="@font/avenir_next_lt_pro_demi"
                        android:gravity="center"
                        android:text="@string/text_sync"
                        android:onClick="@{() -> viewModel.onSyncClick()}"
                        android:textColor="@color/search_text_code"
                        android:textSize="@dimen/size_search"
                        app:layout_constraintBottom_toBottomOf="@id/header_view_title"
                        app:layout_constraintLeft_toRightOf="@id/view_vertical"
                        app:layout_constraintTop_toTopOf="@id/header_view_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="@dimen/margin_end_search"
                        android:layout_toLeftOf="@+id/tv_filter"
                        android:drawableStart="@drawable/ic_search_bt"
                        android:drawablePadding="@dimen/dimen_5"
                        android:fontFamily="@font/avenir_next_lt_pro_demi"
                        android:gravity="center"
                        android:text="@string/text_search"
                        android:onClick="@{() -> viewModel.onSearchClick()}"
                        android:textColor="@color/search_text_code"
                        android:textSize="@dimen/size_search"
                        app:layout_constraintBottom_toBottomOf="@id/header_view_title"
                        app:layout_constraintRight_toLeftOf="@id/tv_filter"
                        app:layout_constraintTop_toTopOf="@id/header_view_title" />

                    <ImageView
                        android:id="@+id/view_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:background="@drawable/blue_filter_circle"
                        app:layout_constraintTop_toTopOf="@id/tv_filter"
                        app:layout_constraintStart_toStartOf="@id/tv_filter"/>

                    <TextView
                        android:id="@+id/tv_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_filter"
                        android:drawablePadding="@dimen/dimen_5"
                        android:fontFamily="@font/avenir_next_lt_pro_demi"
                        android:gravity="center"
                        android:text="@string/text_filter"
                        android:onClick="@{() -> viewModel.onFilterClick()}"
                        android:textColor="@color/search_text_code"
                        android:textSize="@dimen/size_search"
                        android:layout_marginEnd="@dimen/margin_card_end"
                        app:layout_constraintBottom_toBottomOf="@id/header_view_title"
                        app:layout_constraintEnd_toStartOf="@id/guide_endn"
                        app:layout_constraintTop_toTopOf="@id/header_view_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/guide_start"
            app:layout_constraintEnd_toStartOf="@id/guide_end">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="@dimen/guidline_top" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_start_clear_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="@dimen/guide_start_clear_text_per" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:visibility="@{viewModel.isFilterResult()}"
                app:constraint_referenced_ids="tv_filter_result,textview_clear" />

            <TextView
                android:id="@+id/tv_filter_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_filter_result"
                android:textColor="@color/search_text_code"
                android:textSize="@dimen/txt_filter_result"
                android:padding="@dimen/dimen_5"
                android:layout_marginTop="@dimen/clear_text_margin_top"
                android:fontFamily="@font/avenir_next_lt_pro_regular"
                app:layout_constraintTop_toBottomOf="@id/topbar"
                app:layout_constraintStart_toStartOf="@id/guide_start_clear_text"/>

            <TextView
                android:id="@+id/textview_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_clear_filter"
                android:textColor="@color/color_clear_filter"
                android:textSize="@dimen/txt_clear_filter"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/clear_text_margin_top"
                android:fontFamily="@font/avenir_next_lt_pro_demi"
                app:layout_constraintTop_toBottomOf="@id/topbar"
                android:padding="@dimen/dimen_5"
                app:layout_constraintStart_toEndOf="@id/tv_filter_result"
               android:drawableStart="@drawable/ic_clear_result"
                android:drawablePadding="@dimen/dimen_5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_patterns"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_text"
                android:layout_marginTop="@dimen/recy_margin_top"
                android:clickable="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="@{!viewModel.isLoading()}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_clear"
                app:spanCount="4"
                tools:listitem="@layout/my_library_patterns_item" />


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isLoading()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>