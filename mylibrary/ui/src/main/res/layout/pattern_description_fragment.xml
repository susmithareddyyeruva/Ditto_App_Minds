<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <data>

        <variable
            name="viewModel"
            type="com.ditto.mylibrary.ui.PatternDescriptionViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_guide"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.022"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".94"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".86"
            />


        <TextView
            android:id="@+id/subscription"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:background="@drawable/subscription_error_bg"
            android:drawableLeft="@drawable/exclamation"
            android:drawablePadding="12dp"
            android:fontFamily="@font/avenir_next_lt_pro_demi"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="Your subscription for this pattern has expired. Please renew the subscription to continue working on it."
            android:textColor="@color/White"
            android:textSize="@dimen/size_12sp"
            android:visibility="@{viewModel.isSubscriptionExpired()}"
            app:layout_constraintBottom_toTopOf="@id/subscription_guide"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@+id/start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_guide"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.845" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_guide"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.26"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_desc"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="@fraction/image_desc_guideline"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middle_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50"
            />


        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/image_pattern_desc"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/subscription_guide"
            app:layout_constraintEnd_toEndOf="@id/middle_guideline"/>


        <TextView
            android:id="@+id/content_header"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="@{viewModel.patternName}"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_next_lt_pro_demi"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintBottom_toTopOf="@id/status_layout"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/middle_guideline"
            app:layout_constraintTop_toBottomOf="@id/image_desc"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.42" />

        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/content_header"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintStart_toStartOf="@id/middle_guideline"
            android:layout_marginStart="12dp"
            app:layout_constraintHeight_percent="0.04"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Active"
                android:layout_weight="30"
                android:textSize="@dimen/size_14sp"
                android:textColor="#AD201A"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/avenir_next_lt_pro_demi"
                android:drawableLeft="@drawable/ic_cutting_with_a_scissor_on_broken_line" />

            <View
                android:layout_width="0.9dp"
                android:layout_height="match_parent"
                android:id="@+id/line"
                android:layout_marginLeft="12dp"
                android:background="#707070"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="Purchased"
                android:gravity="center|start"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_cart"
                android:drawablePadding="8dp"
                android:layout_marginLeft="12dp"
                android:textColor="#CEA10B"
                android:textSize="@dimen/size_14sp"
                android:fontFamily="@font/avenir_next_lt_pro_demi"/>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            app:layout_constraintStart_toStartOf="@id/middle_guideline"
            app:layout_constraintTop_toBottomOf="@id/status_layout"
            app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            >

            <TextView
                android:id="@+id/description"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/avenir_next_lt_pro_regular"
                android:text="@{viewModel.patternDescription}"
                android:textSize="@dimen/size_16sp"/>
        </androidx.core.widget.NestedScrollView>




        <TextView
            android:id="@+id/text_instructions"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:gravity="center"
            android:text="INSTRUCTIONS"
            android:layout_weight="1"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHeight_percent="0.08"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:background="@drawable/instruction_border"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/middle_guideline"
            app:layout_constraintTop_toBottomOf="@id/nested_scroll"
            android:onClick="@{() -> viewModel.onClickInstructions()}"
            android:textSize="@dimen/size_14px" />

        <TextView
            android:id="@+id/text_watchvideo2"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:paddingLeft="4dp"
            android:padding="4dp"
            android:gravity="center|center_vertical"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.23"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintEnd_toStartOf="@id/end_guideline"
            app:layout_constraintStart_toEndOf="@id/text_instructions"
            app:layout_constraintTop_toBottomOf="@id/nested_scroll"
            android:drawableLeft="@drawable/ic_resume"
            android:background="@drawable/workspace_border"
            android:text="@{viewModel.resumeOrSubscription}"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:onClick="@{() -> viewModel.onClickWorkSpace()}"
            android:textSize="@dimen/size_14px" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>