<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- styles.xml -->
    <style name="text_header">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/needle_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_desc">
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:textColor">@color/needle_grey</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_regular</item>


    </style>

    <style name="text_count">
        <item name="android:textSize">@dimen/text_count</item>
        <item name="android:textColor">@color/needle_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="skip_contin">
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="dont_show_t">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
